extends ../layout
block content

  h3 Browse Breweries
  form(class="navbar-search pull-left")
    input#brewery-search(class="search-query" type="text" placeholder="Search for Breweries")
    
  table#brewery-table(class="table table-striped")
    thead
      tr
        th Name
        th
    tbody
      for brewery in breweries
        tr
          td: a(href="/breweries/show/#{brewery.id}") #{brewery.name}
          td
            a(class="btn btn-small btn-warning" href="/breweries/edit/#{brewery.id}") Edit
            a(class="btn btn-small btn-danger" href="/breweries/delete/#{brewery.id}") Delete
              
  div
    a(class="btn btn-small btn-success" href="/breweries/create") Add Brewery
